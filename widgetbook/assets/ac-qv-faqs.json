{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Input.Text",
            "placeholder": "Enter your full name",
            "label": "Full Name",
            "id": "fullname",
            "isRequired": true,
            "errorMessage": "Full Name is Required"
        },
        {
            "type": "Input.Text",
            "placeholder": "Enter your phone number",
            "label": "Phone Number",
            "isRequired": true,
            "id": "phonenumber",
            "errorMessage": "Phone Number is Required"
        },
        {
            "type": "Input.Date",
            "placeholder": "Enter your booking date",
            "id": "bookingdate",
            "label": "Booking Date",
            "isRequired": true,
            "errorMessage": "Booking date is required"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Male",
                    "value": "male"
                },
                {
                    "title": "Female",
                    "value": "female"
                }
            ],
            "placeholder": "Make a Selection",
            "label": "Gender",
            "id": "gender",
            "isRequired": true,
            "value": "male",
            "errorMessage": "Select a Gender"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Endocrinology",
                    "value": "Endocrinology"
                },
                {
                    "title": "Surgery",
                    "value": "Surgery"
                },
                {
                    "title": "Pediatrics",
                    "value": "Pediatrics"
                }
            ],
            "placeholder": "Make a Selection",
            "label": "Department",
            "isRequired": true,
            "id": "department",
            "value": "Surgery"
        },
        {
            "type": "Input.Text",
            "placeholder": "Enter the reason for your visit",
            "label": "Reason",
            "isMultiline": true,
            "id": "reason"
        },
        {
            "type": "ActionSet",
            "id": "booking",
            "actions": [
                {
                    "type": "Action.Execute",
                    "title": "Cancel Registration"
                },
                {
                    "type": "Action.Submit",
                    "title": "Register"
                }
            ]
        }
    ]
}