{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Buttons in columns aligned left",
            "size": "large"
        },
        {
            "type": "ColumnSet",
            "horizontalAlignment": "left",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "«",
                                    "data": {
                                        "action": "left"
                                    }
                                }
                            ]
                        }
                    ],
                    "spacing": "small"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Center",
                                    "data": {
                                        "action": "center"
                                    }
                                }
                            ]
                        }
                    ],
                    "spacing": "small"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "»",
                                    "data": {
                                        "action": "right"
                                    }
                                }
                            ]
                        }
                    ],
                    "spacing": "small"
                }
            ],
            "spacing": "small"
        }
    ]
}