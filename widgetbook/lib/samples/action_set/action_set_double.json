{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "ActionSet example",
      "wrap": true,
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "positive, destructive, default, default",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "id": "actionSet1",
      "actions": [
        {
          "title": "Action.Submit",
          "type": "Action.Submit",
          "style": "positive"
        },
        {
          "title": "Action.Execute",
          "type": "Action.Execute",
          "style": "destructive"
        },
        {
          "title": "Action.OpenUrl",
          "type": "Action.OpenUrl",
          "url": "https://adaptivecards.io/"
        },
        {
          "title": "Action.ShowCard",
          "type": "Action.ShowCard",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "TextBlock",
                "text": "What do you think?"
              }
            ],
            "actions": [
              {
                "type": "Action.Submit",
                "title": "Neat!"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "ActionSet with a separator",
      "wrap": true,
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "positive, destructive, default, default",
      "wrap": true
    },

    {
      "type": "ActionSet",
      "id": "actionSet2",
      "separator": true,
      "actions": [
        {
          "title": "Action.Submit",
          "type": "Action.Submit",
          "style": "positive"
        },
        {
          "title": "Action.Execute",
          "type": "Action.Execute",
          "style": "destructive"
        },
        {
          "title": "Action.OpenUrl",
          "type": "Action.OpenUrl",
          "url": "https://adaptivecards.io/"
        },
        {
          "title": "Action.ShowCard",
          "type": "Action.ShowCard",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "TextBlock",
                "text": "How does it look?"
              }
            ],
            "actions": [
              {
                "type": "Action.Submit",
                "title": "Great!"
              }
            ]
          }
        }
      ]
    }
  ]
}
