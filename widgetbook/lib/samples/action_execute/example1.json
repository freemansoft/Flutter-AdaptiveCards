{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Present a form and execute it back to the originator"
    },
    {
      "type": "Input.Text",
      "id": "firstName",
      "placeholder": "What is your first name?"
    },
    {
      "type": "Input.Text",
      "id": "lastName",
      "placeholder": "What is your last name?"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "We Accept Action.Execute",
      "verb": "accepted",
      "data": {
        "x": 13,
        "y": 20,
        "z": 30
      }
    },
    {
      "type": "Action.Execute",
      "title": "We Reject Action.Execute with tooltip",
      "tooltip": "This is an Action.Execute button with a tooltip",
      "verb": "rejected",
      "data": {
        "x": 13
      }
    }
  ]
}
