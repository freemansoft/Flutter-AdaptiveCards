{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "[Issue]: [${issue.title}](${issue.url})"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${issue.user.avatar_url}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${issue.user.login}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "Created {{DATE(${issue.created_at},SHORT)}}",
              "isSubtle": true,
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${issue.body}",
      "wrap": true
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Repository:",
          "value": "[${repository.full_name}](${issue.repository_url})"
        },
        {
          "title": "Issue:",
          "value": "[Issue: ${issue.id}]:  [${issue.title}](${issue.repository_url})"
        },
        {
          "title": "State:",
          "value": "${issue.state}"
        },
        {
          "title": "Assigned to:",
          "value": "${issue.assignee.login}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View Issue",
      "url": "(${issue.url})"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
