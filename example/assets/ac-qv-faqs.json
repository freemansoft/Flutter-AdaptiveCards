{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Input.Text",
            "placeholder": "",
            "label": "Họ tên",
            "id": "fullname",
            "isRequired": true
        },
        {
            "type": "Input.Text",
            "placeholder": "",
            "label": "Số điện thoại",
            "isRequired": true
        },
        {
            "type": "Input.Date",
            "id": "bookingdate",
            "label": "Ngày khám",
            "isRequired": true,
            "errorMessage": "Ngày khám không được để trống"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Nam",
                    "value": "male"
                },
                {
                    "title": "Nữ",
                    "value": "female"
                }
            ],
            "placeholder": " ",
            "label": "Giới tính",
            "id": "gender",
            "isRequired": true,
            "value": "male"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Khoa Nội",
                    "value": "Choice 1"
                },
                {
                    "title": "Khoa Ngoại",
                    "value": "Choice 2"
                },
                {
                    "title": "Khoa Nhi",
                    "value": "Choice 3"
                }
            ],
            "placeholder": "Chọn khoa khám",
            "label": "Khoa khám",
            "id": "department"
        },
        {
            "type": "Input.Text",
            "placeholder": "",
            "label": "Lý do"
        },
        {
            "type": "ActionSet",
            "id": "booking"
        }
    ]
}