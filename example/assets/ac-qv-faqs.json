{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "label": "Họ tên",
            "id": "fullname",
            "isRequired": true
        },
        {
            "type": "Input.Date",
            "id": "bookingdate",
            "label": "Ngày khám",
            "isRequired": true
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Nam",
                    "value": "male"
                },
                {
                    "title": "Nữ",
                    "value": "female"
                }
            ],
            "placeholder": "Placeholder text",
            "label": "Giới tính",
            "id": "gender",
            "isRequired": true,
            "value": "male"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Khoa Nội",
                    "value": "Choice 1"
                },
                {
                    "title": "Khoa Ngoại",
                    "value": "Choice 2"
                },
                {
                    "title": "Khoa Nhi",
                    "value": "Choice 3"
                }
            ],
            "placeholder": "Placeholder text",
            "style": "filtered",
            "label": "Khoa khám",
            "id": "department"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Execute",
                    "title": "Đăng ký khám"
                }
            ],
            "id": "booking"
        }
    ]
}