{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "size": "medium",
            "weight": "bolder",
            "text": "Column background image"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "backgroundImage": {
                        "url": "https://adaptivecards.io/content/airplane.png"
                    },
                    "items": [
                        {
                            "text": "Error Loading Image Background",
                            "type": "TextBlock"
                        }
                    ]
                },
                {
                    "width": "stretch",
                    "type": "Column",
                    "backgroundImage": {
                        "url": "https://adaptivecards.io/content/airplane.png",
                        "fillMode": "repeatHorizontally"
                    },
                    "items": [
                        {
                            "text": "background repeat horizontally",
                            "type": "TextBlock"
                        }
                    ]
                },
                {
                    "width": "stretch",
                    "type": "Column",
                    "backgroundImage": {
                        "url": "https://adaptivecards.io/content/airplane.png",
                        "fillMode": "repeatVertically"
                    },
                    "items": [
                        {
                            "text": "background repeat vertically \\\nbackground repeat vertically \\\nbackground repeat vertically \\\nbackground repeat vertically",
                            "type": "TextBlock"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "style": "emphasis",
                    "backgroundImage": {
                        "url": "https://adaptivecards.io/content/airplane.png",
                        "fillMode": "repeat"
                    },
                    "items": [
                        {
                            "text": "backround repeat x and y \\\nbackround repeat x and y \\\nbackround repeat x and y \\\nbackround repeat x and y",
                            "type": "TextBlock"
                        }
                    ]
                }
            ]
        }
    ]
}